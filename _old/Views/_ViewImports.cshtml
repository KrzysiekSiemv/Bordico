@using Server
@using Bordico.Server.Models
@using Server.Database
@using Bordico.Server.ViewModel
@using Server.Controllers
@using System.Text.Json
@using System.Text
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    User user = Context.Session.Get("UserData") != null 
                    ? JsonSerializer.Deserialize<User>(Encoding.UTF8.GetString(Context.Session.Get("UserData") ?? new byte[0])) 
                        ?? new User {id_user = 0} 
                    : new User { id_user = 0 };
}